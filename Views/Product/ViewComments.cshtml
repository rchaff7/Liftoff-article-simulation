@model List<UserComment>

@{
    ViewData["Title"] = "ViewComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Comments</h4>
<hr />
<p>
    <a asp-action="AddComment" asp-route-id="@ViewBag.id">Create New</a>
</p>
@if (Model.Count == 0)
{
    <p>No comments yet!</p>
}
else
{
    @foreach (var item in Model)
    {
        <h6>@item.IdentityUser.NormalizedUserName:</h6>
        <p class="img-thumbnail">
            @Html.DisplayFor(modelItem => item.Content)
            @if (ViewBag.uid == item.IdentityUserId)
            {
            <br />
            <span>
                <a asp-controller="UserComments" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                | 
                <a asp-controller="UserComments" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </span>
            }
        </p>
     }
}